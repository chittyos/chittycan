{
  "name": "chittycan",
  "version": "0.5.1",
  "description": "Your completely autonomous network that grows with you - DNA ownership platform with encrypted vaults, PDX portability, and ChittyFoundation governance",
  "type": "module",
  "bin": {
    "can": "dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p . && npm run copy:assets",
    "copy:assets": "mkdir -p dist/zsh && cp src/zsh/snippets.zsh dist/zsh/",
    "dev": "tsc -p . --watch",
    "mcp": "node dist/mcp-server.js",
    "prepublishOnly": "npm run build && npm run test",
    "postinstall": "node -e \"console.log('\\\\nâœ“ ChittyCan installed! Run: can config\\\\n')\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test:coverage": "vitest run --coverage",
    "coverage": "npm run test:coverage",
    "changeset": "changeset",
    "version-packages": "changeset version"
  },
  "keywords": [
    "chittycan",
    "can",
    "notion",
    "github",
    "cloudflare",
    "neon",
    "linear",
    "infrastructure",
    "devops",
    "productivity",
    "cli",
    "project-management",
    "task-tracking",
    "sync",
    "automation"
  ],
  "author": "chittycorp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chittyos/chittycan.git"
  },
  "homepage": "https://github.com/chittyos/chittycan#readme",
  "bugs": {
    "url": "https://github.com/chittyos/chittycan/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@notionhq/client": "^2.2.14",
    "@octokit/rest": "^20.0.2",
    "chalk": "^5.6.2",
    "chittycan": "^0.3.0",
    "fs-extra": "^11.3.2",
    "inquirer": "^9.2.12",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/yargs": "^17.0.32",
    "@vitest/coverage-v8": "^4.0.14",
    "typescript": "^5.6.3",
    "vitest": "^4.0.6"
  }
}
